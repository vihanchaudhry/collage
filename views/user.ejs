<!DOCTYPE html>
<html>
<head>
  <meta charset="utf8">
  <title>mongo-test</title>
  <link rel="stylesheet" href="/css/stylesheet.css">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
	<header>
    <a id="home-btn" href="/">Collage</a>
		<% if (!user) { %>
			<a href="/login">Login</a>
    	<a href="/signup">Sign up</a>
		<% } else { %>
			<a href="/submit">Submit a post</a>
    	<a href="/users/<%= user.username %>">View profile</a>
    	<a href="/logout">Logout</a>
		<% } %>
  </header>

  <h1><%= user.username %></h1>

	<% for (var i = 0; i < posts.length; i++) { %>
		<div class="post">
			<a href="/posts/<%= posts[i]._id %>">
				<h3><%= posts[i].title %></h3>
			</a>

			<% if (posts[i].link) { %>
				<a href="<%= posts[i].link %>" target="_blank">Link</a>
			<% } %>

			<h4>Submitted on <%= posts[i].date %> by <a href="/users/<%= posts[i].user %>"><%= posts[i].user %></a></h3>

			<% if (posts[i].text) { %>
				<p><%= posts[i].text %></p>
			<% } %>

			<a href="/posts/<%= posts[i]._id %>"> 
				comments
				<% if (posts[i].comments.length > 0) { %>
      		<%= '(' + posts[i].comments.length + ')' %>
    		<% } %>
			</a>
		</div>
  <% } %>
</body>
</html>